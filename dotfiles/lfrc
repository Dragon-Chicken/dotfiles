# Basic settings
set hidden true
set ignorecase true
set icons true

# custom commands

cmd open ${{
	case "$f" in
	*.txt) vim "$f";;
	*.conf) vim "$f";;
	*.yml) vim "$f";;
	*.png) nsxiv "$f" &;;
	*.jpeg) nsxiv "$f" &;;
	*.jpg) nsxiv "$f" &;;
	*) echo "not able to open file, if the file can be opened please add it to '.conf/lf/lfrc'";;
	esac
}}

cmd mkdir ${{
	printf "Name: "
	read ans
	mkdir $ans
}}
cmd mkfile ${{
	printf "Name: "
	read ans
	vim $ans
}}

cmd trash ${{
	printf "Delete file '$f' ? y/N: "
	read ans
	case "$ans" in
		*"y") rm -r "$f";;
		*"Y") rm -r "$f";;
		*) echo "ABORTED";;
	esac
}}

# keymap

# open stuff
map e $vim "$f"
map p $nsxiv "$f"

# quit
map q quit

# up down left right
map <up> up
map <down> down
map <left> updir
map <right> open

# same as right but with the enter key
map <enter> open

# copy paste cut clear
map c copy
map x cut
map v paste
map <esc> clear

# PGUP PGDN HOME END

map <pgup> page-up
map <pgdn> page-down
map <home> top
map <end> bottom

# sellection
map i invert
map s glob-select

# make folders and files
map m
map md mkdir
map mf mkfile

# delete and restore
map <delete> trash
